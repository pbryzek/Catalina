<resources>    
    <style name="CatalinaTheme" parent="@style/Theme.Sherlock.Light">
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:padding">0dp</item>
	    <item name="actionBarItemBackground">@null</item>
    	<item name="backgroundStacked">#ffffff</item>
    	<item name="actionBarDivider">@null</item>
    	<item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabStyle</item>
	</style>    
	
    <style name="MyActionBarTabStyle" parent="Widget.Sherlock.Light.ActionBar.TabBar">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>
    
    <style name="SplashScreen" parent="android:Theme">
        <item name="android:windowBackground">@drawable/ic_launcher</item>
        <item name="android:windowNoTitle">true</item>        
    </style>

</resources>